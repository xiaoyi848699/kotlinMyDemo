<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SpringIndicator">

        <!--tab text color -->
        <attr name="siTextColor" format="reference" />

        <!--tab text color which is selected-->
        <attr name="siSelectedTextColor" format="reference" />

        <!--tab item bg -->
        <attr name="siTextBg" format="reference" />

        <!--tab text size-->
        <attr name="siTextSize" format="dimension" />

        <!--indicator bg color-->
        <attr name="siIndicatorColor" format="reference" />

        <!--indicator bg colors. should equals your titles count-->
        <attr name="siIndicatorColors" format="reference" />

        <!--max indicator radius-->
        <attr name="siRadiusMax" format="dimension" />

        <!--min indicator radius when moving-->
        <attr name="siRadiusMin" format="dimension" />

    </declare-styleable>

    <declare-styleable name="RadarWaveView">

        <attr name="waveColor" format="color" />

        <attr name="waveAmplitude" format="dimension" />

        <attr name="waveSpeed" format="float" />

        <attr name="waveStartPeriod" format="float" />
        <attr name="waveStart" format="boolean" />

        <attr name="waveFillTop" format="boolean" />
        <attr name="waveFillBottom" format="boolean" />

        <attr name="waveFillType" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>

        <attr name="waveType" format="enum">
            <enum name="sin" value="0" />
            <enum name="cos" value="1" />
        </attr>

    </declare-styleable>
</resources>