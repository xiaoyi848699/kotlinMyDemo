<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowFullscreen">true</item> &lt;!&ndash;设置全屏. &ndash;&gt;-->
        <item name="android:statusBarColor">@color/rts_text_orange</item><!--5.0  21API以上  在不设置全屏情况下可以设置顶部状态栏背景颜色. -->
    </style>
    <style name="rst_bottom_lay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@drawable/bg_black60t_gray_corners</item>

    </style>

    <!--rts-->
    <style name="rts_item_header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/rts_text_default</item>
    </style>

    <style name="rts_item_header_text_pid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/rts_text_default</item>
    </style>

    <style name="rts_item_content_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/rts_text_orange</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="rts_video_content_text_title">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_60</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>
    <style name="rts_video_content_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_87</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    <style name="horizontal_graw46_thin_divider">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black_26</item>
    </style>
    <style name="rts_item_white_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--画笔左则显示图片修改-->
    <style name="rts_item_content_text_modify">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/rts_text_orange</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--rts 水平线-->
    <style name="rts_horizontal_light">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/item_coupon_text_dark</item>
    </style>
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--popup样式-->
    <style name="PopupAnimaFade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/basepopup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/basepopup_fade_out</item>
    </style>
    <style name="MyDialogStyleInFromBottom" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="activityAnimation" parent="@android:style/Animation">  
        <item name="android:activityOpenEnterAnimation">@anim/in_from_bottom</item>  
        <item name="android:activityOpenExitAnimation">@anim/out_to_top</item>  
        <item name="android:activityCloseEnterAnimation">@anim/in_from_top</item>  
        <item name="android:activityCloseExitAnimation">@anim/out_to_bottom</item>  
  </style>
</resources>
