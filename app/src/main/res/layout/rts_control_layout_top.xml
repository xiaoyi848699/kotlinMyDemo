<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sv_control_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/sv_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:layout_margin="2dp"
            android:background="@drawable/rts_bg_white_corners_left"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/wb_normal"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_normal_s"/>
            <ImageView
                android:id="@+id/wb_big"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_big_n"/>
            <ImageView
                android:id="@+id/wb_bigger"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_bigger_n"/>
            <ImageView
                android:id="@+id/wb_black"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_black_s"/>
            <ImageView
                android:id="@+id/wb_blue"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_blue_n"/>
            <ImageView
                android:id="@+id/wb_red"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_red_n"/>
        </LinearLayout>
    </RelativeLayout>

</merge>