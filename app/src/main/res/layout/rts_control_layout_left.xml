<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sv_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/sv_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:background="@drawable/rts_bg_white_right_corners_left"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/wb_move"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_move_n"/>
            <ImageView
                android:id="@+id/wb_select"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_select_n"/>
            <ImageView
                android:id="@+id/wb_pen"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_pen_s"/>
            <ImageView
                android:id="@+id/wb_eraser"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_eraser_n"/>
            <ImageView
                android:id="@+id/wb_image"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_image_n"/>
            <ImageView
                android:id="@+id/wb_text"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_text_n"/>
            <ImageView
                android:id="@+id/wb_audio"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_audio_n"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/sv_tools_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/sv_tools"
            android:background="@drawable/rts_bg_white_corners_left"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/wb_curve"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_curve_s"/>
            <ImageView
                android:id="@+id/wb_straight"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_straight_n"/>
            <ImageView
                android:id="@+id/wb_circular"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_circular_n"/>
            <ImageView
                android:id="@+id/wb_rectangle"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_rectangle_n"/>
            <ImageView
                android:id="@+id/wb_redo"
                android:layout_width="@dimen/ic_pid_w_h28"
                android:layout_height="@dimen/ic_pid_w_h28"
                android:padding="2dp"
                android:src="@drawable/wb_redo_n"/>
        </LinearLayout>
    </RelativeLayout>

</merge>