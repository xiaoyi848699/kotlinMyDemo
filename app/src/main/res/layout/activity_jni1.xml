<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:id="@+id/hint_tv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <Button
                   android:id="@+id/md5_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:onClick="btnClick"
                   android:text="JNI MD5"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/java_result"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/jni_result"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <Button
                       android:id="@+id/java_btn1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:onClick="btnClick"
                       android:text="kotlin RSA 加密"/>
                   <Button
                       android:id="@+id/java_btn2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:onClick="btnClick"
                       android:text="kotlin RSA 解密"/>
                   <Button
                       android:id="@+id/rsa_btn1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:onClick="btnClick"
                       android:text="JNI rsa加密"/>
                   <Button
                       android:id="@+id/rsa_btn2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:onClick="btnClick"
                       android:text="JNI rsa解密"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/data"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="这是加密数据xiaoyi_tdcq"/>
                   <TextView
                       android:id="@+id/java_result1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/java_result2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/jni_result1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/jni_result2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <Button
                       android:id="@+id/base64_btn1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:onClick="btnClick"
                       android:text="JNI base64 加密"/>
                   <Button
                       android:id="@+id/base64_btn2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:onClick="btnClick"
                       android:text="JNI base64 解密"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/bas64_result1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/bas64_result2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <Button
                       android:id="@+id/aes_btn1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:onClick="btnClick"
                       android:text="JNI AES 加密"/>
                   <Button
                       android:id="@+id/aes_btn2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:onClick="btnClick"
                       android:text="JNI AES 解密"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/aes_result1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/aes_result2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <Button
                       android:id="@+id/des_btn1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:onClick="btnClick"
                       android:text="JNI DES 加密"/>
                   <Button
                       android:id="@+id/des_btn2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:onClick="btnClick"
                       android:text="JNI DES 解密"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/des_result1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/des_result2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </LinearLayout>


       </LinearLayout>
    </ScrollView>


</LinearLayout>